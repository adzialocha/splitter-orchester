{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "~/*": [
        "./*"
      ],
      "sanity-schema": [
        "../sanity-schema.d.ts"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "sanity-schema.d.ts",
    "src/types.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "studio",
    "node_modules"
  ]
}
